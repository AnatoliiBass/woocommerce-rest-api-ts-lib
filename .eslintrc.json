{
  "env": {
    "es6": true
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "standard",
    "prettier",
    "plugin:jest/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      2,
      4
    ],
    "@typescript-eslint/no-explicit-any": ["off"], // allow any
    "no-console": 1 // warn
  }
}
